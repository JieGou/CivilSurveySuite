<Window x:Class="_3DS_CivilSurveySuite.UI.Views.SurfaceSelectView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_3DS_CivilSurveySuite.UI.Views"
        mc:Ignorable="d"
        Title="Select Surface" Height="300" Width="150" WindowStartupLocation="CenterScreen" WindowStyle="ToolWindow"
        >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="25"/>
        </Grid.RowDefinitions>
        <ListBox ItemsSource="{Binding SurfaceNames}" SelectedItem="{Binding SelectedSurfaceName}"/>
        <Button Grid.Row="1" Content="OK" Height="23" Click="Button_Click"/>
    </Grid>
</Window>
