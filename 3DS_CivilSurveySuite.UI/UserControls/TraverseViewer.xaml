<Window x:Class="_3DS_CivilSurveySuite.UI.UserControls.TraverseViewer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:userControls="clr-namespace:_3DS_CivilSurveySuite.UI.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Title="Traverse Preview">
    <Grid x:Name="ViewerGrid" SizeChanged="Grid_OnSizeChanged" >
        <userControls:ZoomBorder ClipToBounds="True" Background="Black" >
            <Canvas x:Name="ViewerCanvas" />
        </userControls:ZoomBorder>
    </Grid>
</Window>
