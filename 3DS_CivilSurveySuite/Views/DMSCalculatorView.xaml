                        </Path.Data>
                    </Path>
                </Viewbox>
            </StackPanel>
        </Button>

        <Button Grid.Column="1" Grid.Row="1" Content="CE" />
        <Button Grid.Column="0" Grid.Row="1" Content="C" />

        <Button Grid.Column="0" Grid.Row="2" Content="7" Command="{Binding NumPadCommand}" CommandParameter="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Content}" />
        <Button Grid.Column="1" Grid.Row="2" Content="8" Command="{Binding NumPadCommand}" CommandParameter="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Content}"/>
        <Button Grid.Column="2" Grid.Row="2" Content="9" Command="{Binding NumPadCommand}" CommandParameter="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Content}"/>

        <Button Grid.Column="0" Grid.Row="3" Content="4" Command="{Binding NumPadCommand}" CommandParameter="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Content}"/>
        <Button Grid.Column="1" Grid.Row="3" Content="5" Command="{Binding NumPadCommand}" CommandParameter="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Content}"/>
        <Button Grid.Column="2" Grid.Row="3" Content="6" Command="{Binding NumPadCommand}" CommandParameter="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Content}"/>
        <Button Grid.Column="3" Grid.Row="3" Content="-" Command="{Binding SubtractionDMSCommand}" x:Name="BtnSubtract"/>

        <Button Grid.Column="0" Grid.Row="4" Content="1" Command="{Binding NumPadCommand}" CommandParameter="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Content}"/>
        <Button Grid.Column="1" Grid.Row="4" Content="2" Command="{Binding NumPadCommand}" CommandParameter="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Content}"/>
        <Button Grid.Column="2" Grid.Row="4" Content="3" Command="{Binding NumPadCommand}" CommandParameter="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Content}"/>
        <Button Grid.Column="3" Grid.Row="4" Content="+" Command="{Binding AdditionDMSCommand}" x:Name="BtnAdd" />

        <Button Grid.Column="0" Grid.Row="5" Content="+/-" />
        <Button Grid.Column="1" Grid.Row="5" Content="0" Command="{Binding NumPadCommand}" CommandParameter="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Content}"/>
        <Button Grid.Column="2" Grid.Row="5" Content="." Command="{Binding NumPadCommand}" CommandParameter="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Content}"/>
        <Button Grid.Column="3" Grid.Row="5" Content="ENTER" Command="{Binding EnterDMSCommand}" x:Name="BtnEnter"/>

    </Grid>
    
</UserControl>
